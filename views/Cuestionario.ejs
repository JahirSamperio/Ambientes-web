      <div class="course-container2">
        <div class="course-info">
        <h1>Cuestionario</h1>
        <% if (Array.isArray(evaluacion)) { %>
          <% evaluacion.forEach((pregunta, index) => { %>
            <h2>Pregunta <%= index + 1 %>:</h2>
            <p><%= pregunta.pregunta_pregunta %></p>
            <ul>
              <% pregunta.opciones.forEach((opcion) => { %>
                <li>
                  <input type="radio" id="opcion_<%= opcion.pregunta_opcions_id_opcion %>" name="pregunta_<%= pregunta.pregunta_id_pregunta %>" value="<%= opcion.pregunta_opcions_id_opcion %>">
                  <label for="opcion_<%= opcion.pregunta_opcions_id_opcion %>"><%= opcion.pregunta_opcions_opcion %></label>
                </li>
              <% }); %>
            </ul>
            <br>
          <% }); %>
        <% } else { %>
          <p>No hay datos disponibles para mostrar.</p>
        <% } %>
        </div>
        
    </div>


